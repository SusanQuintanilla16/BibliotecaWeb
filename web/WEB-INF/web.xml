<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sv.edu.cad.controller.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>sv.edu.cad.controller.login.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerPrestamoServlet</servlet-name>
        <servlet-class>sv.edu.cad.controller.admin.VerPrestamoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngPrestamoServlet</servlet-name>
        <servlet-class>sv.edu.cad.controller.admin.IngPrestamoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerPrestamoServlet</servlet-name>
        <url-pattern>/VerPrestamo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngPrestamoServlet</servlet-name>
        <url-pattern>/ingresarP</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>AplicationResource</param-value>
    </context-param>
</web-app>
